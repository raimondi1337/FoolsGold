extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
      img#logo(src="/assets/img/icon.png", alt="face logo")
    .navlink
      a(href="/logout") Log out
  section#makeScrape
    form#scrapeForm(class="scrapeForm", name="scrapeForm", action="/maker", method="POST")
      label(for="url") URL: 
      input#scrapeURL(type="text", name="url", placeholder="URL")
      label(for="query") Query: 
      input#scrapeQuery(type="text", name="query", placeholder="ie 6UL wheels")
      a#makeScrapeSubmit(class="makeScrapeSubmit", href="#") Make new Scrape
  section#content
    section#scrapesPane
      if !scrapes || scrapes.length == 0
          div.scrape
              h3.emptyScrape No Scrapes yet
      else
          each scrape in scrapes
              div.scrape
                  h3.scrapeTitle Scraping: #{scrape.url}
                  h3.scrapeSubtitle For: #{scrap.query}
    section#resultsPane
      ul.results
        each scrape in scrapes
          each val in scrape.result
            li.result
              Result: #{val.url}

block scripts
        script(src="/assets/maker.js")