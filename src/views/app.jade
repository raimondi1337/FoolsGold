extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
      img#logo(src="/assets/img/face.png", alt="face logo")
    .navlink
      a(href="/logout") Log out
  section#makeScrape
    form#scrapeForm(class="scrapeForm", name="scrapeForm", action="/maker", method="POST")
      label(for="url") URL: 
      input#scrapeName(type="text", name="url", placeholder="URL")
      label(for="query") Query: 
      input#scrapeQuery(type="text", name="query", placeholder="ie 6UL wheels")
      a#makeScrapeSubmit(class="makeScrapeSubmit", href="#") Make new Scrape
  section#scrapes
    if !domos || domos.length == 0
        div.domo
            h3.emptyDomo Bo Scrapes yet
    else
        each val in domos
            div.domo
                img(class="domoFace", src="/assets/img/domoface.jpeg", alt="domo face")
                h3.scrapeURL URL: #{val.url}
                h3.scrapeQuery Query: #{val.query}
  #domoMessage
    img#speech(src="/assets/img/speech.png", alt="speech box")
    h3
      span#errorMessage
    img#domo(src="assets/img/domo.png", alt="domo")
block scripts
        script(src="/assets/maker.js")