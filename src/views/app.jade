extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
      img#logo(src="/assets/img/face.png", alt="face logo")
    .navlink
      a(href="/logout") Log out
  section#addScrape
    form#scrapeForm(class="scrapeForm", name="scrapeForm", action="/maker", method="POST")
      label(for="name") URL: 
      input#scrapeURL(type="text", name="url", placeholder="URL")
      label(for="query") Query: 
      input#scrapeQuery(type="text", name="query", placeholder="ie 6UL wheels")
      a#addScrapeSubmit(class="addScrapeSubmit", href="#") Add Scrape
  section#scrapes
    if !scrapes || scrapes.length == 0
        div.scrape
            h3.emptyScrape No Scrapes yet
    else
        each val in scrapes
            div.scrape
                h3.scrapeURL URL: #{val.name}
                h3.scrapeQuery Query: #{val.age}
block scripts
        script(src="/assets/maker.js")