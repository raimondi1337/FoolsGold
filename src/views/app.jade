extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
      img#logo(src="/assets/img/face.png", alt="face logo")
    .navlink
      a(href="/logout") Log out
  section#makeDomo
    form#domoForm(class="domoForm", name="domoForm", action="/maker", method="POST")
      label(for="name") URL: 
      input#domoName(type="text", name="name", placeholder="URL")
      label(for="age") Query: 
      input#domoAge(type="text", name="age", placeholder="ie 6UL wheels")
      a#makeDomoSubmit(class="makeDomoSubmit", href="#") Make Domo
  section#domos
    if !domos || domos.length == 0
        div.domo
            h3.emptyDomo No Domos yet
    else
        each val in domos
            div.domo
                h3.domoName URL: #{val.name}
                h3.domoAge Query: #{val.age}
  #domoMessage
    img#speech(src="/assets/img/speech.png", alt="speech box")
    h3
      span#errorMessage
    img#domo(src="assets/img/domo.png", alt="domo")
block scripts
        script(src="/assets/maker.js")