extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
      img#logo(src="/assets/img/icon.png", alt="face logo")
    .navlink
      a(href="/logout") Log out
  section#makeScrape
    form#scrapeForm(class="scrapeForm", name="scrapeForm", action="/maker", method="POST")
      label(for="url") URL: 
      input#scrapeName(type="text", name="url", placeholder="URL")
      label(for="query") Query: 
      input#scrapeQuery(type="text", name="query", placeholder="ie 6UL wheels")
      a#makeScrapeSubmit(class="makeScrapeSubmit", href="#") Make new Scrape
  section#scrapes
    if !scrapes || scrapes.length == 0
        div.domo
            h3.emptyDomo No Scrapes yet
    else
        each val in scrapes
            div.scrape
                h3.scrapeTitle Scraping #{val.url} for #{val.query}
                ul.results
                  each item in #{val.results}
                    li.result
                      a(href='#{item}') #item
block scripts
        script(src="/assets/maker.js")